##ANTDIR
#Getting the inbound/outbound

#dat is data, indexed as (time in frames) x (trajectory #) x (x vec/y vec/heading/magnitude of motion)
#outbound is how the analysis is restricted; 0 = all trajectories, 1 = outbound only, 2 = inbound only
#bytime is whether to take the variance between all trajectory headings in a frame (TRUE) or the mean variance of all trajectories active during that frame (FALSE)

#mintime and maxtime restrict the time being examined, entered in minutes (note mintimef and maxtimef within the function are in units of frames)
#frate (frame rate) is used for converting from minutes to frames (default: 5 frames/s); anywhere you see "frate*60" is converting frames to minutes or back

#winspace (window space) and winsize (window size) are how far apart to place the average points and the window within which the average is taken (default: 30s)

#binno (bin number) is the number of colors used to code for relative numbers on the trail
#lspace is the "line spacing" for graphical purposes (default: 10m)
#legloc (legend location) takes values 1-4, starting in the upper left and going clockwise
#keepscale is whether the axes should be scaled to the data in the restricted time (FALSE) or the data as a whole (TRUE)
#titles is the option to manually enter a plot title; utilized by Mass.Function to pass file names for graph identification

Antdir <- function(dat = trajs, outbound = 0, bytime = FALSE,
                    mintime, maxtime, frate = 5,
                    winspace = 30, winsize = 30,
                    binno = 6, lspace = 10, legloc = 2, keepscale = FALSE, titles, ...){
  Antdir.f(dat, outbound, bytime, mintime, maxtime, frate, winspace, winsize, binno, lspace, legloc, keepscale, titles, ...)
}

Antdir.f <- function(trajs.antdir, outbound.antdir, bytime.antdir,
                      mintime.antdir, maxtime.antdir, frate.antdir,
                      winspace.antdir, winsize.antdir, 
                      binno.antdir, lspace.antdir, legloc.antdir, keepscale.antdir, titles.antdir, ...){
  
  #Greatest number of trajectories in region during any frame (for coloring purposes)
  antmax.antdir <- max(rowSums(!is.na(trajs.antdir[,,1])))
  
  #mintime/maxtime: finding and converting
  minmaxf.antdir <- Minmax(trajs.antdir, mintime = mintime.antdir, maxtime = maxtime.antdir, lspace = lspace.antdir, frate = frate.antdir)
  mintimef.antdir <- minmaxf.antdir[1]
  maxtimef.antdir <- minmaxf.antdir[2]
  lspacef.antdir <- minmaxf.antdir[3]
  
  #Converting other input arguments to frames
  winspacef.antdir <- winspace.antdir*frate.antdir
  winsizef.antdir <- round(winsize.antdir * frate.antdir / 2)     #Halved since the value will be used to extend to either side of a point
  
  #If not provided, assembles the main title of the plot based on input arguments
  if(missing(titles.antdir)){
    plotitle <- paste0('Mean angle of',
                       if(outbound.antdir==1){
                         ' outbound'
                       }else if(outbound.antdir==2){
                         ' inbound'
                       }else{
                         ' inbound and outbound'
                       },
                       ' ant heading (', round(mintimef.antdir / (frate.antdir*60)), 'm to ', round(maxtimef.antdir/(frate.antdir*60)),'m)'
    )
    
  }else{plotitle <- titles.antdir}
  
  
  #Main plotting function (Outbound must follow graphcol)
  graphcol <- floor( (rowSums(!is.na(trajs.antdir[mintimef.antdir:maxtimef.antdir,,1]))/antmax.antdir*binno.antdir)+1 ) #determining overall graph color (must come before filtering)
  if(outbound.antdir != 0){trajs.antdir <- Outbound(trajs.antdir, outbound.antdir)}
  
  if(bytime.antdir == TRUE){
    
    rvars <- apply(trajs.antdir[,,3], 1, mean.circular, na.rm = TRUE)          #calculate mean angle
    
    keepvars <- rvars[mintimef.antdir:maxtimef.antdir]                        #Subset those to be graphed
    plotvars <- keepvars                                                        #Redundant in bytime==TRUE, but used for average dots below
    ylab.antdir <- "Mean angle of ant headings (radians)"
    
  }else if(bytime.antdir == FALSE){
    print("Calculating angles and average points")
    
    cvars <- apply(trajs.antdir[,,3], 2, mean.circular, na.rm = TRUE)          #Calculate mean angles
    
    keepvars <- pbsapply(1:dim(trajs.antdir)[1], FUN = function(x){            #Find the mean of the angles for total time (keepscale again)
      activetrajs <- Active(trajs.antdir, x)
      if(length(activetrajs) > 0){                                              #If there are no trajectories active at a time return 0, otherwise mean
        mean.circular(cvars[activetrajs], na.rm = TRUE)
      }else{return(NA)}
    })
    
    plotvars <- keepvars[mintimef.antdir:maxtimef.antdir]                     #Subset those to be graphed
    
    ylab.antdir <- "Mean angle of trajectory headings (radians)"
  }
  
  plot(x = mintimef.antdir:maxtimef.antdir, y = plotvars, 
       ylim = if(keepscale.antdir == TRUE){c(-pi, pi)}else{NULL},
       main = plotitle, xlab = "Frame Number", ylab = ylab.antdir, 
       col = graphcol)
  
  
  #Values for time lines below:
  #dims[1:4] are size of the plot
  #dims[5] is calculating where to put the text just above the bottom of the frame
  #dims[6] is where the dotted line ends just above the text (currently unused)
  dims.antdir <- c(par("usr"), par("usr")[3]+(par("usr")[4]-par("usr")[3])/60, par("usr")[3]+2*((par("usr")[4]-par("usr")[3])/60)) 
  
  #Adding visuals to graph
  abline(h = 0, lty = 3)                                                        #x-axis
  abline(h = mean(plotvars, na.rm = TRUE), lty = 3)                             #mean line for whole data set (for reference even in keepscale)
  #if(mintimef.antdir != 1 | maxtimef.antdir != dim(trajs.antdir)[1]){
  if(keepscale.antdir == TRUE){
    abline(h = mean(plotvars, na.rm = TRUE), lty = 3, col = "orange")           #mean line for selected range if it isn't the same as the whole
  }
  
  
  linseq <- seq(from = 0, to = maxtimef.antdir, by = lspacef.antdir)          #Find where to put minute lines
  abline(v = linseq, lty = 3, lwd = 0.5, col = rgb(0,0,0, alpha = 0.25))        #Draw minute lines
  text(linseq, dims.antdir[5], labels = paste0(linseq / (frate.antdir*60), "m"), #Add labels to minute lines
       col = rgb(0,0,0, alpha = 0.45))
  
  dotseq <- seq(from = mintimef.antdir, to = maxtimef.antdir, by = winspacef.antdir) #Find where to put the points
  dotseq <- dotseq[(dotseq - winsizef.antdir) > 0 & (dotseq + winsizef.antdir) < maxtimef.antdir] #Remove points that would cause the function to out-of-bounds
  varseq <- pbsapply(dotseq, FUN = function(x){mean(keepvars[(x - winsizef.antdir):(x + winsizef.antdir)], na.rm = TRUE)}) #Get mean of mean variances in range
  
  points(x = dotseq, y = varseq, pch = 18, col = "gray26")                      #Add average points
  lines(x = dotseq, y = varseq, col = "gray26")                                 #Add connection lines between average points
  
  Legendno(type = 1, binno = binno.antdir, legloc = legloc.antdir,            #Add legend
           antmax = antmax.antdir) 
  
  
}